#!/usr/bin/make -f

%:
	dh $@ --with python2 --buildsystem=python_distutils

override_dh_install:
	dh_install
	rm -rf debian/cloud-init/usr/lib/python?.?/dist-packages/tests

override_dh_auto_test:
	dh_auto_test
	$(MAKE) test

override_dh_installinit:
	dh_installinit --no-start --no-restart-on-upgrade
